
import ch.aplu.jgamegrid.*;
import ch.aplu.util.*;
import java.awt.*;

public class Ring extends Actor
{

    public Ring()
    {
        super("circle_ballon.png");
    }

    public void createRing()
    {
      Actor ring = new Actor("circle_ballon.png");
      int j = 50;
      while (j <100)j = ((int) 700*Math.random() +1);
      int k = (200*Math.random() +1);
      addActor(ring, new Location((int)j ,(int)k));
      player.addCollisionActor(ring);
      player.addActorCollisionListener(this);
    }
}
