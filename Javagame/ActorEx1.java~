// ActorEx1.java

import ch.aplu.jgamegrid.*;
import java.awt.Color;

public class ActorEx1 extends GameGrid
{
  public ActorEx1()
  {
    super(10, 10, 60, Color.red);
    Circle nemo = new Circle();
    addActor(nemo, new Location(1, 4));
    show();
  }

  public static void main(String[] args)
  {
    new ActorEx1();
  }
}

// ------------- class Fish --------------------
class Circle extends Actor
{
  public Circle()
  {
    super("logo_circle.png");
  }
  
  public void act()
  {
    move();
  }
}